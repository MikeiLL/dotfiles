[alias]
	co = checkout
	ca = !git add -A && git commit -av
[apply]
	whitespace = nowarn
[color]
	branch = auto
	diff = auto
	status = auto
	ui = true
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[commit]
	gpgsign = true
[core]
	editor = e -w
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[credential]
	helper = GIT_CREDENTIAL_HELPER
[difftool]
	prompt = false
[gpg]
	program = /usr/local/bin/gpg
[help]
	autocorrect = 1
[hub]
	protocol = https
[mergetool]
	keepBackup = false
[protocol]
	version = 2
[push]
	default = simple
[user]
	name = AUTHORNAME
	email = AUTHOREMAIL
	signingkey = SIGNINGKEY
